<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/email_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/email"
        android:layout_below="@id/email_text_view"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="45dp"
        />
    <ImageView
        android:id="@+id/user_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        android:layout_below="@id/user_text_view"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="45dp"
        />
    <ImageView
        android:id="@+id/pass_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pass"
        android:layout_below="@id/pass_text_view"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="45dp"
        />
    <ImageView
        android:id="@+id/eye_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/eye"
        android:layout_toRightOf="@id/pass_edit_view"
        android:layout_below="@id/pass_text_view"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingTop="200dp"
        android:paddingLeft="80dp"
        />
    <TextView
        android:id="@+id/user_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_below="@id/email_image_view"
        android:paddingLeft="80dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/pass_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/user_image_view"
        android:paddingLeft="80dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/email_edit_view"
        android:layout_width="280dp"
        android:layout_height="41dp"
        android:inputType="text"
        android:layout_below="@id/email_text_view"
        android:layout_toRightOf="@id/email_image_view"
        android:layout_marginTop="12dp"
        />
    <EditText
        android:id="@+id/user_edit_view"
        android:layout_width="280dp"
        android:layout_height="41dp"
        android:inputType="text"
        android:layout_below="@id/user_text_view"
        android:layout_toRightOf="@id/user_image_view"
        android:layout_marginTop="12dp"
        />
    <EditText
        android:id="@+id/pass_edit_view"
        android:layout_width="280dp"
        android:layout_height="41dp"
        android:inputType="textPassword"
        android:layout_below="@id/pass_text_view"
        android:layout_toRightOf="@id/pass_image_view"
        android:layout_marginTop="12dp"
        />
    <Button
        android:id="@+id/button_id"
        android:layout_height="wrap_content"
        android:layout_width="280dp"
        android:text="Get Started"
        android:layout_below="@id/pass_edit_view"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="76dp"
        />

</RelativeLayout>